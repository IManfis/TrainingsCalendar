@model IEnumerable<TrainingsCalendar.WebUI.Models.TrainersViewModel>
@{
    ViewBag.Title = "TrainersList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Trainers List</h2>
<p>
    @Html.ActionLink("Create New", "CreateTrainers")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTrainers", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeleteTrainers", new { id = item.ID })
            </td>
        </tr>
    }
</table>

<div>
    <a role="button" class="btn btn-default" href="@Url.Action("AdminPanel","Admin")">Back</a>
</div>