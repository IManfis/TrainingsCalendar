@model TrainingsCalendar.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Login</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Please log in to get access to the admin panel:</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Username:</label>
                @Html.TextBoxFor(m => m.UserName, new { @style="width: 30%", @class = "form-control"})
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(m => m.Password, new { @style = "width: 30%", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <input type="submit" value="Войти" class="btn btn-primary" />
        }
    </div>
</div>