@using System.Drawing
@model IEnumerable<TrainingsCalendar.WebUI.Models.CalendarViewModel>
@{
    ViewBag.Title = "Index";
}

    <div class="col-lg-offset-5"><h2>@Model.ElementAt(1).Mounth</h2></div>

<div class="col-xs-11">
    <table style="margin-left: 10px; margin-right: 20px;">

        <tr>
            <th>
                Training
            </th>
            <th>
                <pre>
                   @for (var i = 1; i <= Model.ElementAt(1).DaysInMonth; i++)
                   {<span style="padding: 0px 10px; display: inline-block;">@i</span>}</pre>
            </th>
        </tr>
@foreach (var mod in Model)
{
            <tr>
                <td>
                    <p style="margin-right: 20px;">@mod.TrainingName</p>
                </td>
                <td>
                    <div class="progress">
                        <div class="progress-bar " style="-ms-opacity: 0; opacity: 0; width: @((mod.StartDate - 1) * 100 / 31)%;"></div>
                        <div class="progress-bar progress-bar-info" style="width: @((mod.EndDate - @mod.StartDate + 1) * 100 / 31)%;"></div>
                    </div>
                </td>
            </tr>
}
    </table>
</div>